extends layout/main

block content
  .form-container
    form(action=`${routes.users + routes.changePassword}`, method="post")
      input(type="password", name="oldPassword", placeholder="Current Password", required=true )
      input(type="password", name="newPassword", placeholder="New Password", required=true )
      input(type="password", name="newPassword1", placeholder="Verify Password", required=true )
      input(type="submit" value="Change Password")